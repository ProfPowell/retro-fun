---
layout: base.njk
---
<article class="post-article">
  <div class="post-header">
    <time datetime="{{ page.date | isoDate }}">{{ page.date | readableDate }}</time>
    <h2>{{ title }}</h2>
  </div>
  <div class="post-body">
    {{ content | safe }}
  </div>
  <a class="post-back" href="{{ '/posts/' | url }}">&larr; All Posts</a>
</article>
